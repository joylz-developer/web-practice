{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "removeComments": true,
    "target": "es5",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./typings"
    ],
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "include": [
    "src/**/*"
  ],
}